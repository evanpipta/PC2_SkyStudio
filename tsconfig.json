{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",

    "rootDir": "src/UI",
    "outDir": "src/Main/skystudio/UIGameface",

    "jsx": "react",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",

    "strict": false,
    "noImplicitAny": false,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      // Paths for unpacked game files adjacent to this repo
      "/js/*": ["../GameMain/Content/UIGameface/userinterfaceessentials/UIGameface/js/*"],
      "/js/common/lib/preact.js": ["src/UI/types/preact-proxy"],

      // Map our source folder to an absolute path and .js extensions so ts doesn't complain about our source module imports
      "/*.js": ["./src/UI/*"]
    }
  },
  "include": [
    "src/UI/**/*",
    "src/UI/types/**/*.d.ts"
  ]
}
